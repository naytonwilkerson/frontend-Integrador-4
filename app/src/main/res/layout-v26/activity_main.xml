<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/order_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="4dp"
        android:text="@string/cadastro_de_igreja"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cnpj_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:text="@string/cnpj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_textview" />

    <EditText
        android:id="@+id/cnpj_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/apenas_numeros"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/cnpj_label"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/nome_label"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="@string/nome"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="117dp" />

    <EditText
        android:id="@+id/nome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/nome_da_igreja"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/nome_label"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/telefone_label"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"

        android:text="@string/telefone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_label" />

    <EditText
        android:id="@+id/telefone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/xx_xxxxx_xxxx"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/telefone_label"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/endereco"
        android:onClick="bt2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>